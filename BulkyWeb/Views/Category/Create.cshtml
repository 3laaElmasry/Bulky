@model Category

<form method="post" asp-action="Create" asp-controller="Category">
	<div class="border p-3 mt-4">
		<div class="row pb-4">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3 row p-1">
			<label class="p-0" asp-for="Name">Category Name</label>
			<input asp-for="Name" type="text" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>
		<div class="mb-3 row p1">
			<label class="p-0" asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control"/>
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control" >Create</button>

			</div>

			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" 
				class="btn btn-outline-secondary border form-control">
					Back To List
				</a>
			</div>
		</div>
	</div>
</form>
